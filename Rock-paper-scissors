import random
player_number = 0
computer_number = 0
score_player = 0
score_computer = 0
round_game = 0
#start of the game.
print('Welcome to the rock, paper, scissors game! What\'s your name?')
name = str(input('Enter name: '))
print(f'Hello {name} there will be 3 rounds in total.')
print('You can choose rock, paper or scissors, by entering the following:')
print('"1" - ✊ Rock')
print('"2" - ✋ Paper')
print('"3" - ✌️ Scissors')
print('Good Luck!')
#loop
while round_game < 3 and not (
    (score_player >= 2 and score_computer == 0) or
    (score_computer >= 2 and score_player == 0)
    ):
#player chooses 1-3.
  print('| "1" - ✊ Rock | "2" - ✋ Paper | "3" - ✌️ Scissors | ')
  player_number = int(input('Enter the number 1-3: '))
  while player_number not in [1, 2, 3]:
   player_number = int(input('Incorret nubmer. Enter the number 1-3: '))
#prints what user chose.
  if player_number == 1:
     print('You chose the Rock.')
  elif player_number == 2:
    print('You chose the Paper.')
  elif player_number == 3:
    print('You chose the Scissors.')
#computer randomly chooses 1-3.
  computer_number = random.randint(1,3)
  if computer_number == 1:
   print('Computer chose the Rock.')
  elif computer_number == 2:
   print('Computer chose the Paper.')
  elif computer_number == 3:
   print('Computer chose the Scissors.')
#decides who won the round.
  if player_number == 1 and computer_number == 1:
    print('It\'s a tie.')
    round_game += 1
    print (f'Score: Player - {score_player} - {score_computer} - Computer')
  elif player_number == 1 and computer_number == 2:
   print('Computer wins this round!')
   round_game += 1
   score_computer += 1
   print (f'Score: Player - {score_player} - {score_computer} - Computer')
  elif player_number == 1 and computer_number == 3:
   print('Player wins this round!')
   round_game += 1
   score_player += 1
   print (f'Score: Player - {score_player} - {score_computer} - Computer')
  elif player_number == 2 and computer_number == 1:
    print('Player wins this round!')
    round_game += 1
    score_player += 1
    print (f'Score: Player - {score_player} - {score_computer} - Computer')
  elif player_number == 2 and computer_number == 2:
   print('It\'s a tie.')
   round_game += 1
   print (f'Score: Player - {score_player} - {score_computer} - Computer')
  elif player_number == 2 and computer_number == 3:
   print('Computer wins this round!')
   round_game += 1
   score_computer += 1
   print (f'Score: Player - {score_player} - {score_computer} - Computer')
  elif player_number == 3 and computer_number == 1:
   print('Computer wins this round!')
   round_game += 1
   score_computer += 1
   print (f'Score: Player - {score_player} - {score_computer} - Computer')
  elif player_number == 3 and computer_number == 2:
   print('Player wins this round!')
   round_game += 1
   score_player += 1
   print (f'Score: Player - {score_player} - {score_computer} - Computer')
  elif player_number == 3 and computer_number == 3:
   print('It\'s a tie.')
   round_game += 1
   print (f'Score: Player - {score_player} - {score_computer} - Computer')
  elif round_game == 3:
    pass
  #Generates message about winner
print('Game finished')
print(f'Final score: Player - {score_player} - {score_computer} - Computer')

if score_computer > score_player:
    print('You lost, better luck next time!')
elif score_player > score_computer:
    print('You won! Congartulations!!!')
else:
    print('It\'s a tie!')
